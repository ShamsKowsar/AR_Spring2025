<launch>



  <param name="/use_sim_time" value="true" />
  <arg name="world_file"  default="$(find anki_description)/world/sample1.world"/>
  <arg name="robot_urdf" default="$(find anki_description)/urdf/vector.xacro"/>
 



  <include file="$(find gazebo_ros)/launch/empty_world.launch">
	<arg name="world_name" value="$(arg world_file)"/>
	<arg name="paused" value="false"/>
	<arg name="use_sim_time" value="true"/>
	<arg name="gui" value="true"/>
	<arg name="headless" value="false"/>
	<arg name="debug" value="false"/>
  </include>



  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(arg robot_urdf)'" />
 
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser"
  	args="0.1 0 0.2 0 0 0 base_link base_laser 100" />



 
 	 
  <node pkg="slam_pkg" type="get_random_pose.py" name="get_random_pose" output="screen" />




  <node name="robot_state_publisher" pkg="robot_state_publisher"
  	type="robot_state_publisher" respawn="false" output="screen">
  </node>



  <node pkg="slam_pkg" type="slam_node.py" name="slam_node" output="screen">
	<param name="odom_topic" value="/odom"/>
	<param name="scan_topic" value="/scan"/>
  </node>




</launch>

